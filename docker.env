# Docker Environment Variables
# Скопируйте этот файл в .env и заполните реальными значениями

# База данных PostgreSQL
DATABASE_URL="postgresql://postgres:password@db:5432/fortuna_db"

# Redis для кэширования и очередей
REDIS_URL="redis://redis:6379"

# Sendsay API для отправки email уведомлений
SENDSAY_API_KEY="your_sendsay_api_key"
SENDSAY_LOGIN="your_sendsay_login"
SENDSAY_PASSWORD="your_sendsay_password"

# API конфигурация
BACKEND_URL="http://localhost:3000"
PORT=3000

# Окружение
NODE_ENV="production"

# JWT секрет (сгенерируйте безопасный ключ)
JWT_SECRET="your_super_secure_jwt_secret_key_here"

# Настройки логирования
LOG_LEVEL="info"

# Настройки CORS (для продакшена укажите ваш домен)
CORS_ORIGIN="http://localhost:3000"

# Настройки rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100